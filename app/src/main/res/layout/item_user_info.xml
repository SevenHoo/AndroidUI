<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/x412"
    android:layout_height="@dimen/x500">

    <ImageView
        android:id="@+id/user_photo_image_view"
        android:layout_width="@dimen/x412"
        android:layout_height="@dimen/x412"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_background"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/x30"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/user_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/x30"
        android:text="@string/app_name"/>

</LinearLayout>